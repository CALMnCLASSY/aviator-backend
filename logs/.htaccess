# Deny access to log files
<Files "*.log">
    Order allow,deny
    Deny from all
</Files>

# Deny access to .env files
<Files ".env*">
    Order allow,deny
    Deny from all
</Files>

# Deny access to sensitive files
<FilesMatch "\.(env|log|json|js)$">
    <RequireAll>
        Require ip 127.0.0.1
        Require ip ::1
    </RequireAll>
</FilesMatch>
